        <activity
            android:name="com.hannesdorfmann.circleprogressview.sample.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hannesdorfmann.circleprogressview.sample.color.ColorPickerActivity"
            android:label="@string/title_activity_color_picker" >
        </activity>
        <activity
            android:name="com.hannesdorfmann.circleprogressview.sample.color.ColorActivity"
            android:label="@string/title_activity_color" >
        </activity>
        <activity
            android:name="com.hannesdorfmann.circleprogressview.sample.xml.XmlLayoutActivity"
            android:label="@string/title_activity_xml_layout" >
        </activity>
        <activity
            android:name="com.hannesdorfmann.circleprogressview.sample.theme.ThemeActivity"
            android:label="@string/title_activity_theme"
